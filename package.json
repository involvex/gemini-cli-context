{
  "name": "@involvex/gemini-cli-context",
  "version": "1.0.0",
  "description": "updates Gemini.md files for Gemini-cli .",
  "keywords": [
    "gemini",
    "ai",
    "google",
    "generative-ai"
  ],
  "author": "Involvex",
  "main": "src/index.js",
  "bin": {
    "gemini-cli-context": "dist/gemini-cli-context.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "prebuild": "if not exist dist mkdir dist",
    "build": "esbuild src/index.js --bundle --platform=node --outfile=dist/gemini-cli-context.cjs"
  },
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.12.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "globals": "^15.15.0",
    "prettier": "^3.6.2"
  }
}
